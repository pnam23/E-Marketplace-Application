@model AppUserModel
@{
	ViewData["title"] = "Edit User";
}
<h4>Edit User</h4>
<div class="col-md-9">
	<form asp-action="Edit" enctype="multipart/form-data">
		<input type="hidden" asp-for="Id" />

		<div asp-asp-validation-summary="ModelOnly" class="text-danger">
			<div class="form-group">
				<label>UserName</label>
				<input asp-for="UserName" required class="form-control" placeholder="Enter UserName" />
				<span asp-validation-for="UserName" class="text-danger" />
			</div>

			<div class="form-group">
				<label>Email</label>
				<input asp-for="Email" required class="form-control" placeholder="Enter Email" />
				<span asp-validation-for="Email" class="text-danger" />
			</div>

			<div class="form-group">
				<label>Phone Number</label>
				<input asp-for="PhoneNumber" required class="form-control" placeholder="Enter PhoneNumber" />
				<span asp-validation-for="PhoneNumber" class="text-danger" />
			</div>

			<div class="form-group">
				<label>Password</label>
				<input asp-for="PasswordHash" required class="form-control" placeholder="Enter Password" />
				<span asp-validation-for="PasswordHash" class="text-danger" />
			</div>

			<div class="form-group">
			<label>Roles</label>
			<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">

			</select>
			<span asp-validation-for="RoleId" class="text-danger"></span>
			</div>


			</>
			<div class="form-group">
				<button class="btn btn-primary">Update</button>
			</div>
	</form>
	<a asp-action="Index">Back to List Users</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

